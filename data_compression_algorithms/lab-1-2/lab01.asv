sum=0;



[h,w]=size(M);

for i=1:h       
    for j=1:w
            
             ni(M(i,j) + 1) = ni(M(i,j) + 1) + 1; 

        end

    end




for i=1:256
%ni - ile razy wystapila dana liczba




